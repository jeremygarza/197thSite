<p id="notice"><%= notice %></p>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center m-t-lg">
            <h1>Current Calendar</h1>
            <div class="table-responsive">
              <table class="table table-hover table-bordered">
                <thead>
                <tr>
                  <th>Date</th>
                  <th>Start time</th>
                  <th>End time</th>
                  <th>Audience</th>
                  <th>Event notes</th>
                  <th>Instructor</th>
                  <th>Uniform</th>
                  <th>Location</th>
                  <th>Risk level</th>
                  <th>Reference</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @calendars.each do |calendar| %>
                  <tr>
                    <td><%= calendar.date %></td>
                    <td><%= calendar.start_time %></td>
                    <td><%= calendar.end_time %></td>
                    <td><%= calendar.audience %></td>
                    <td><%= calendar.event_notes %></td>
                    <td><%= calendar.instructor%></td>
                    <td><%= calendar.uniform %></td>
                    <td><%= calendar.location %></td>
                    <td><%= calendar.risk_level %></td>
                    <td><%= calendar.reference %></td>
                    <td><%= link_to 'Show', calendar %></td>
                    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
                    <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
            <br>

            <h3>Import Calendar</h3>
            <%= form_tag import_calendars_path, multipart: true do %>
             <%=file_field_tag :file %>
             <%= submit_tag "Upload Calendar" %>
            <% end %>
            <%= link_to 'New Calendar', new_calendar_path %>
            </div>
        </div>
    </div>
</div>
